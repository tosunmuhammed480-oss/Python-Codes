import tkinter as tk
from tkinter import messagebox

# Pencere oluÅŸtur
pencere = tk.Tk()
pencere.title("KÄ±rmÄ±zÄ± Buton Uygulamam")
pencere.geometry("400x300")
pencere.configure(bg="#f0f0f0")

# Butona basÄ±ldÄ±ÄŸÄ±nda Ã§alÄ±ÅŸacak fonksiyon
def buton_tiklandi():
    messagebox.showinfo("Tebrikler!", "KÄ±rmÄ±zÄ± butona bastÄ±n! ğŸ‰")

# KÄ±rmÄ±zÄ± buton oluÅŸtur
kirmizi_buton = tk.Button(
    pencere,
    text="Bana TÄ±kla!",
    command=buton_tiklandi,
    bg="#ff4444",           # KÄ±rmÄ±zÄ± arka plan
    fg="white",             # Beyaz yazÄ±
    font=("Arial", 16, "bold"),
    width=15,
    height=3,
    border=0,
    cursor="hand2"
)

# Butonu pencereye yerleÅŸtir
kirmizi_buton.pack(pady=80)

# Hover efekti (fare Ã¼zerine gelince renk deÄŸiÅŸimi)
def buton_uzerinde(event):
    kirmizi_buton.config(bg="#cc0000")

def buton_disinda(event):
    kirmizi_buton.config(bg="#ff4444")

kirmizi_buton.bind("<Enter>", buton_uzerinde)
kirmizi_buton.bind("<Leave>", buton_disinda)

# Pencereyi Ã§alÄ±ÅŸtÄ±r
pencere.mainloop()
